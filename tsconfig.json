{
  "include": [
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "outDir": "../../dist/typescript",
    "newLine": "lf",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "es2022",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext"
    ],
  }
}