{
  "include": [
    "../../src/**/*.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "preferTsExts": true,
    "esm": true
  },
  "compilerOptions": {
    "composite": true,
    "baseUrl": "../..",
    "outDir": "../../dist/ts",
    "newLine": "lf",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "lib": [
      "esnext",
      "dom",
      "webworker"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "components/*": [
        "src/components/*"
      ]
    },
    "jsx": "react-jsx"
  }
}