{
  "ts-node": {
    "transpileOnly": true,
    "preferTsExts": true,
    "esm": true
  },
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "outDir": "../../dist/ts",
    "newLine": "lf",
    "declaration": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "lib": [
      "esnext",
      "dom",
      "webworker"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "../../src/**/*.{js,ts}"
  ]
}