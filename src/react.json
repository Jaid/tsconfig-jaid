{
  "include": [
    "../../*",
    "../../src/**/*",
    "../../test/**/*",
    "../../etc/**/*"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "composite": true,
    "baseUrl": "../..",
    "outDir": "../../out/ts",
    "skipLibCheck": true,
    "newLine": "lf",
    "module": "esnext",
    "target": "es2023",
    "strictNullChecks": true,
    "allowArbitraryExtensions": true,
    "lib": [
      "esnext",
      "dom",
      "webworker"
    ],
    "paths": {
      "component/*": [
        "src/components/*/index.tsx"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "etc/*": [
        "etc/*"
      ],
      "src/*": [
        "src/*"
      ],
      "root/*": [
        "*"
      ]
    },
    "jsx": "react-jsx"
  }
}