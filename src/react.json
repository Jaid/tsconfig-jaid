{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "outDir": "../../dist/typescript",
    "newLine": "lf",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "es2022",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "paths": {
      "lib/*": [
        "src/lib/*"
      ],
      "src/*": [
        "src/*"
      ],
      "root/*": [
        "./*"
      ]
    },
    "jsx": "react"
  }
}