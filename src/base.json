{
  "include": [
    "../../*",
    "../../src/**/*",
    "../../test/**/*",
    "../../etc/**/*"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "composite": true,
    "baseUrl": "../..",
    "outDir": "../../dist/ts",
    "skipLibCheck": true,
    "newLine": "lf",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "strictNullChecks": true,
    "lib": [
      "esnext"
    ],
    "paths": {
      "lib/*": [
        "src/lib/*"
      ],
      "src/*": [
        "src/*"
      ],
      "root/*": [
        "*"
      ]
    }
  }
}